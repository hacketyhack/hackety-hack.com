%tr.item
<% for attribute in attributes -%>
  %td= list.<%= attribute.name %>
<% end -%>
  %td= link_to "Show", resource_path(list)
  - if can? :update, list
    %td= link_to 'Edit', edit_resource_path(list)
  - if can? :destroy, list
    %td= link_to 'Delete', resource_path(list), :confirm => 'Are you sure?', :method => :delete
